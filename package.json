{
  "name": "vite-react-daisyui-electron-template",
  "version": "1.0.0",
  "main": "main/index.js",
  "author": {
    "name": "Dennis Kountouris"
  },
  "description": "vite-react-daisyui-electron-template",
  "productName": "vite-react-daisyui-electron-template",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\" --kill-others",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^1.2.0",
    "daisyui": "^2.52.0",
    "electron-context-menu": "^3.6.1",
    "electron-is-dev": "^2.0.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router": "^6.14.2",
    "react-router-dom": "^6.14.2",
    "vite": "^2.8.6"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "postcss": "^8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
